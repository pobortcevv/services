server {
	listen 80;
	listen [::]:80;
	return 301 https://$server_name$request_uri;
}
server {
	listen 443 ssl;
	listen [::]:443 ssl;
	server_name www;
	
	ssl on;
    ssl_certificate /etc/ssl/certs/sabra.crt ;
    ssl_certificate_key /etc/ssl/private/sabra.key ;

	root /www;
	index index.html; 

	location /wordpress {
		return 307 http://$host:5050;
		}

	location / {
		autoindex on;
		try_files $uri $uri/ =404;
		}

	location = /404.html {
		internal;
		}
	}
